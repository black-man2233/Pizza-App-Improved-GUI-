<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:local="clr-namespace:PizzaAppWpf"
    xmlns:view="clr-namespace:PizzaAppWpf.View"
    xmlns:viewModel="clr-namespace:PizzaAppWpf.MVVM.ViewModel"
    xmlns:vm="clr-namespace:PizzaAppWpf.ViewModel"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate DataType="{x:Type vm:HomeVM}">
        <view:Home />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:CartVM}">
        <view:Cart />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:CheckOutVM}">
        <view:CheckOut />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModel:MenuVM}">
        <view:Menu />
    </DataTemplate>
</ResourceDictionary>